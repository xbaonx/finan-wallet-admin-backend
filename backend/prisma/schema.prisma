// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AdminUser {
  id           String   @id @default(cuid())
  username     String   @unique
  passwordHash String   @map("password_hash")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  @@map("admin_users")
}

model Token {
  id        String   @id @default(cuid())
  symbol    String   @unique
  name      String
  address   String   @unique
  decimals  Int
  logoUri   String?  @map("logo_uri")
  updatedAt DateTime @updatedAt @map("updated_at")
  createdAt DateTime @default(now()) @map("created_at")

  @@map("tokens")
}

model P2POrder {
  id            String      @id @default(cuid())
  walletAddress String      @map("wallet_address")
  amount        Decimal     @db.Decimal(18, 8)
  status        P2PStatus   @default(PENDING)
  txHash        String?     @map("tx_hash")
  paymentProof  String?     @map("payment_proof")
  note          String?
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")

  @@map("p2p_orders")
}

model Config {
  id                String   @id @default(cuid())
  bankName          String   @map("bank_name")
  accountNumber     String   @map("account_number")
  accountHolder     String   @map("account_holder")
  qrImageUrl        String?  @map("qr_image_url")
  note              String?
  adminWalletAddress String  @map("admin_wallet_address")
  usdtRate          Decimal  @default(1.0) @map("usdt_rate") @db.Decimal(10, 4)
  isActive          Boolean  @default(true) @map("is_active")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  @@map("config")
}

enum P2PStatus {
  PENDING
  PAID
  CONFIRMED
  CANCELLED
}
